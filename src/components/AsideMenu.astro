---
import LibraryIcon from '../icons/LibraryIcon.astro'
import Home from '../icons/Home.astro'
import Search from '../icons/Search.astro'
import AsideMenuItem from '../components/AsideMenuItem.astro'
import AsideMenuCard from '../components/AsideMenuCard.astro'
import { playlists } from '../lib/data.ts'
---
<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <AsideMenuItem href='/'>
                <Home/>
                Home
            </AsideMenuItem>

            <AsideMenuItem href='/#'>
                <Search/>
               Search
            </AsideMenuItem>

        </ul>
    </div>
    <div class="bg-zinc-800 rounded-lg p-2 flex-1">
    <ul>
            <AsideMenuItem>
                <LibraryIcon/>
                Tu biblioteca
            </AsideMenuItem>
            {playlists.map( playlist => <AsideMenuCard playlist={playlist}/>)}
         
    </ul>
</div>
</nav>




