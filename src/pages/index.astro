---
import Layout from '../layouts/Layout.astro';
import { playlists } from '../lib/data';
import PlayListItemCard from '../components/PlayListItemCard.astro'
import Greeting from  '../components/Greeting.svelte'
---

<Layout title="Spotify Clone">
    <div id="pla</div>ylist-container"
    class="relative transition-all duration-1000 rounded-lg  bg-red-600"
    >
    <!--Page Header-->
    <div class="relative z-10 px-6 pt-10 ">
        <Greeting/>
        <div class="flex flex-wrap mt-6 gap-4 flex-1">
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist}/>)}
        </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/100"></div>
    </div>
</Layout>

